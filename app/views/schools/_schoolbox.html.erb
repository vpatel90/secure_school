
<div class="row">
  <div class="col s12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= link_to school.name, school_path(school.id) %></span>
        <p><%= school.motto %></p>
        <div class="card-action">
        <%=link_to "Teachers: #{school.teachers.count}", school_teachers_path(school.id) %>
        <%= link_to "Students: #{school.students.count}", school_students_path(school.id) %>
        <%= link_to "Courses: #{school.courses.count}", school_courses_path(school.id) %>
        </div>
      </div>
    </div>
  </div>
</div>
