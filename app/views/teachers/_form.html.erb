<% if @teacher.errors.any? %>
  <section>
    <ul>
      <% @teacher.errors.full_messages.each do |err| %>
        <li>
          <%= err %>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>
<%= form_for(@teacher, url: school_teachers_path) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit class: "blue darken-2 waves-effect waves-light btn" %>
<% end %>
