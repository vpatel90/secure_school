<h1><%= link_to "Teachers", school_teachers_path(@school.id) %></h1>

<p>Find me in app/views/teachers/show.html.erb</p>
<div class="row">
  <%= link_to "Delete", school_teacher_path(school_id: @teacher.school_id,
              id: @teacher.id), method: "DELETE",
              class: "delete-edit-button right red waves-effect waves-light btn",
              data: { confirm: "Are you sure you want to delete this School?" }%>

    <%= link_to "Edit", edit_school_teacher_path(school_id: @teacher.school_id,
                               id: @teacher.id),
                class: "delete-edit-button right orange waves-effect waves-light btn"%>

  <div class="col s12 m8 l10">
      <h3> <%= @teacher.name %> </h3>
    </div>
</div>

<% @enrollments.each do |enrollment| %>
<p><%= enrollment.student_name %> | <%= enrollment.course_name %></p>
<% end %>
