<h1><%= link_to "courses", school_courses_path(@school.id) %></h1>

<p>Find me in app/views/courses/show.html.erb</p>
<div class="row">
  <%= link_to "Delete", school_course_path(school_id: @course.school_id,
              id: @course.id), method: "DELETE",
              class: "delete-edit-button right red waves-effect waves-light btn",
              data: { confirm: "Are you sure you want to delete this School?" }%>

    <%= link_to "Edit", edit_school_course_path(school_id: @course.school_id,
                               id: @course.id),
                class: "delete-edit-button right orange waves-effect waves-light btn"%>

  <div class="col s12 m8 l10">
      <h3> <%= @course.name %> </h3>
      <p> <%= @course.description %></p>
    </div>
</div>
